
max_number = 20


rows = 1
while rows * (rows + 1) // 2 <= max_number:
    rows += 1
rows -= 1


current_number = 1


for i in range(1, rows + 1):
    
    print(" " * (rows - i), end="")

    
    for j in range(1, i + 1):
        if current_number <= max_number:
            print(current_number, end=" ")
            current_number += 1
    
    
    print()
